<form method="get" action="/quizes">
	<h3>Buscador</h3>
	<input type="text" name="search" value="Texto a buscar" />
	<input type="submit" value="Enviar" />
</form>
<br/>
<table>
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr>
			<td><a href="/quizes/<%= quizes[i].id %>">[<%= quizes[i].tema %>] <%= quizes[i].pregunta %></a></td>
			<% if(session.user) { %>
				<td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button">Editar</button></a></td>
				<td>
					<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete" >
						<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Borrar</button>
					</form>
				</td>
			<% } %>
		</tr>
	<% } %>
</table>
<% if(session.user) { %>
	<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>